<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d428a"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="casual"
        android:text="Player Points Comparison"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#ffffff"
        android:textColorHint="#3F51B5"
        android:textSize="45sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/player_1"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:layout_marginHorizontal="30dp"
            android:ems="10"
            android:hint="P1's name" />

        <EditText
            android:id="@+id/player_2"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:ems="10"
            android:hint="P2's name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/first_no"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:layout_marginHorizontal="30dp"
            android:ems="10"
            android:hint="P1 points game 1"
            android:inputType="number" />

        <EditText
            android:id="@+id/second_no"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:ems="10"
            android:hint="P2 points game 1"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/third_no"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:layout_marginHorizontal="30dp"
            android:ems="10"
            android:hint="P1 points game 2"
            android:inputType="number" />


        <EditText
            android:id="@+id/fourth_no"
            android:layout_width="150dp"
            android:layout_height="59dp"
            android:ems="10"
            android:hint="P2 points game 2"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/fifth_no"
                android:layout_width="150dp"
                android:layout_height="59dp"
                android:layout_marginHorizontal="30dp"
                android:ems="10"
                android:hint="P1 points game 3"
                android:inputType="number" />


            <EditText
                android:id="@+id/sixth_no"
                android:layout_width="150dp"
                android:layout_height="59dp"
                android:ems="10"
                android:hint="P2 points game 3"
                android:inputType="number" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/answer1"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginBottom="10dp"
        android:textColor="#1EFFFFFF"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:text="Compare the players!"
        android:textSize="12sp"
        app:rippleColor="#BBDEFB" />


</LinearLayout>